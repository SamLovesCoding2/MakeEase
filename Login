    private void btn_SignUpActionPerformed(java.awt.event.ActionEvent evt)                                           
    {                                               
        NewUser u = new NewUser();
        u.setVisible(true);
        u.pack();
        u.setLocationRelativeTo(null);
        u.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.dispose();

    }                                          

    private void btn_logInActionPerformed(java.awt.event.ActionEvent evt)                                          
    {                                              
        if (jTextField_UserName.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add a userName");
        } else if (jPasswordField.getPassword().equals(""))
        {
            JOptionPane.showMessageDialog(null, "add a password");
        } else
        {
            PreparedStatement ps;
            ResultSet rs;
            String name = jTextField_UserName.getText();
            String pass = String.valueOf(jPasswordField.getPassword());

            String query = "SELECT * FROM USER_INFO WHERE U_USERNAME = ? AND U_PASSWORD = ?";
            try
            {
                ps = MakeEase.getConnection().prepareStatement(query);
                ps.setString(1, name);
                ps.setString(2, pass);
                rs = ps.executeQuery();
                if (rs.next())
                {
                    Home mf = new Home();
                    mf.setVisible(true);
                    mf.pack();
                    mf.setLocationRelativeTo(null);
                    mf.setExtendedState(JFrame.MAXIMIZED_BOTH);
                    this.dispose();
                } else
                {
                    JOptionPane.showMessageDialog(null, "Incorrect", "Login Failed", 0x2);
                }
            } catch (SQLException | ClassNotFoundException ex)
            {
                Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }                                         

