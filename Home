    private void btxExportNameAddActionPerformed(java.awt.event.ActionEvent evt)                                                 
    {                                                     
        String str;
        for (int i = 0; i <= comboExportCompName.getItemCount(); i++)
        {
            str = (String) comboExportCompName.getItemAt(i);
            if (txtExportCompName.getText().equals(str))
            {
                JOptionPane.showMessageDialog(null, "company already existed");
                comboExportCompName.removeItemAt(comboExportCompName.getItemCount() - 1);
            }
        }
        if (txtExportCompName.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "Please import the company name");
        } else
        {
            comboExportCompName.addItem(txtExportCompName.getText());
            model2.addElement(txtExportCompName.getText());
            txtExportCompName.setText(null);
        }
    }                                                

