    {                                                        
        if (comboExportCompName.getItemCount() != 0 && !model2.isEmpty())
        {
            comboExportCompName.removeItemAt(comboExportCompName.getSelectedIndex());
        } else
        {
            JOptionPane.showMessageDialog(null, "The list is empty");
        }
    }                                                   

