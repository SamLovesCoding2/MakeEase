    DefaultListModel model = new DefaultListModel();
    private void btnImportNameAddActionPerformed(java.awt.event.ActionEvent evt)                                                 
    {                                                     
        for (int i = 0; i <= comboBoxImportComp.getItemCount(); i++)
        {
            String str = (String) comboBoxImportComp.getItemAt(i);
            if (txtImportCompName.getText().equals(str))
            {
                JOptionPane.showMessageDialog(null, "company already existed");
                comboBoxImportComp.removeItemAt(comboBoxImportComp.getItemCount() - 1);
            }
        }

        if (txtImportCompName.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please input the company name");
        } else
        {
            comboBoxImportComp.addItem(txtImportCompName.getText());
            model.addElement(txtImportCompName.getText());
            txtImportCompName.setText(null);
            labImportComp.setText((String) comboBoxImportComp.getSelectedItem());

        }

    }                                                

    private void btxImportNameDeleteActionPerformed(java.awt.event.ActionEvent evt)                                                    
    {                                                        
        if (comboBoxImportComp.getItemCount() != 0 && !model.isEmpty())
        {
            comboBoxImportComp.removeItemAt(comboBoxImportComp.getSelectedIndex());
        } else
        {
            JOptionPane.showMessageDialog(null, "The list is empty");
        }

    }                                                   

    private void comboBoxImportCompActionPerformed(java.awt.event.ActionEvent evt)                                                   
    {                                                       
        PreparedStatement ps;
        String query = SELECT IMPORTCOMPNAME FROM INFORMATION WHERE USER_ID =  ?;
        try
        {
            ps = MakeEase.getConnection().prepareStatement(query);
            ps.setString(1, userName);
            ps.setString(2, password);

            if (ps.executeUpdate() > 0)
            {
                JOptionPane.showMessageDialog(null, "New User Add");
            }
        } catch (SQLException | ClassNotFoundException ex)
        {
            Logger.getLogger(NewUser.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                                  

    private void btnStoreActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             

        double amountLeft = 0;

        SimpleDateFormat sdf = new SimpleDateFormat("MM-dd-yyyy");

        String dateImport = sdf.format(importDate.getSelectedDate());
        double importAmountPaid = Double.parseDouble(txtAmountPaid.getText());
        String importBrand = txtImportBrand.getText();
        double importAmount = Double.parseDouble(txtImportAmount.getText());
        double importUnitPrice = Double.parseDouble(txtImportUnitPrice.getText());
        double importCost = Double.parseDouble(txtImportCost.getText());

        double importOtherPayment = Double.parseDouble(txtImportOtherPayment.getText());
        double exportAmount = Double.parseDouble(txtExportAmount.getText());
        double exportAmountGained = Double.parseDouble(txtExportAmountGained.getText());
        double profits = exportAmountGained - importAmountPaid;
        String dateExport = sdf.format(exportDate.getSelectedDate());
        double amountLeftWorth = importUnitPrice * amountLeft;
        String importComp = (String) comboBoxImportComp.getSelectedItem();
        String exportComp = (String) comboExportCompName.getSelectedItem();
        if (importAmount < exportAmount)
        {
            amountLeft = 0;
        } else
        {
            amountLeft = importAmount - exportAmount;
        }
        if (txtAmountPaid.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add a paid amount");
        } else if (txtImportBrand.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an import brand");
        } else if (txtImportAmount.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an import amount");
        } else if (txtImportUnitPrice.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an import unit price");
        } else if (txtImportCost.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an import cost");
        } else if (txtImportOtherPayment.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an import other payment");
        } else if (txtExportAmount.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an export Amount");
        } else if (txtExportAmountGained.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "please add an Export Amount Gained");
        } else
        {

            try
            {
                PreparedStatement ps;
                String query2 = "INSERT INTO INFORMATION (IMPORTDATE, IMPORTAMOUNTPAYED, IMPORTCOMPNAME, IMPORTBRAND, IMPORTAMOUNT, "
                        + "IMPORTUNIPRICE, IMPORTCOST, IMPORTOTHERPAYMENT, EXPORTDATE, EXPORTAMOUNT, EXPORTCOMPNAME, "
                        + "EXPORTAMOUNTGAINED, PROFITS, AMOUNTLEFT, "
                        + "AMOUNTLEFTWORTH) VALUES (?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
                ps = MakeEase.getConnection().prepareStatement(query2);
                ps.setString(1, dateImport);
                ps.setDouble(2, importAmountPaid);
                ps.setString(3, importComp);
                ps.setString(4, importBrand);
                ps.setDouble(5, importAmount);
                ps.setDouble(6, importUnitPrice);
                ps.setDouble(7, importCost);
                ps.setDouble(8, importOtherPayment);
                ps.setString(9, dateExport);
                ps.setDouble(10, exportAmount);
                ps.setString(11, exportComp);
                ps.setDouble(12, exportAmountGained);
                ps.setDouble(13, profits);
                ps.setDouble(14, amountLeft);
                ps.setDouble(15, amountLeftWorth);

                if (ps.executeUpdate() > 0)
                {
                    JOptionPane.showMessageDialog(null, "New transaction Add");
                }
            } catch (SQLException | ClassNotFoundException ex)
            {
                Logger.getLogger(NewUser.class.getName()).log(Level.SEVERE, null, ex);
            }
        }


    }                                        

